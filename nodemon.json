{
  "watch": ["src"],
  "ext": "ts,js",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "uploads/**/*",
    "data/**/*",
    "*.log",
    "*.tmp",
    "*.cache"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000"
}